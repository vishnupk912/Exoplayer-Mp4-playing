<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ResultPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:gravity="right|center_vertical"
        >

        <ImageView
            android:id="@+id/closeid"
            android:layout_width="@dimen/ts32"
            android:layout_height="@dimen/ts32"
            android:src="@drawable/ic_cross"
            android:layout_marginRight="@dimen/ts12"
            >

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/cat1"
                android:layout_height="@dimen/cat1"
                android:src="@drawable/logo1024"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black1"
                android:textSize="@dimen/ts24"
                android:text="Obtained Score :"
                android:gravity="center"
                android:fontFamily="@font/opensanssemibold"
                android:layout_marginTop="@dimen/ts24"
                />
            <TextView
                android:id="@+id/scoretvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/ts48"
                android:gravity="center"
                android:layout_margin="@dimen/ts12"
                android:fontFamily="@font/opensanssemibold"
                android:layout_marginTop="@dimen/ts8"
                android:layout_marginBottom="@dimen/ts12"
                />
            <ImageView
                android:id="@+id/star"
                android:layout_width="@dimen/img6"
                android:layout_height="@dimen/img"

                />
            <TextView

                android:id="@+id/tvid"
                android:layout_width="@dimen/img6"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:gravity="center"
                android:layout_margin="@dimen/ts12"
                android:fontFamily="@font/opensanssemibold"
                android:layout_marginTop="@dimen/ts24"
                android:padding="@dimen/ts12"
                android:layout_marginBottom="@dimen/ts12"
                />

        </LinearLayout>




        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ts40"
            android:layout_marginLeft="@dimen/ts24"
            android:layout_marginRight="@dimen/ts24"
            android:layout_marginTop="@dimen/ts48"
            android:background="@drawable/buttonshape1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be Premium Member "
                android:layout_marginLeft="@dimen/ts12"
                android:layout_marginRight="@dimen/ts12"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:fontFamily="@font/opensansbold"
                />


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"

        >

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="celeb.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </LinearLayout>
</FrameLayout>