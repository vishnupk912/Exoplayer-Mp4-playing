<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".OtpPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/backid"
            android:layout_width="@dimen/ts48"
            android:layout_height="@dimen/ts48"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ts12"
            >
            <ImageView
                android:layout_width="@dimen/ts40"
                android:layout_height="@dimen/ts40"
                android:src="@drawable/ic_back"
                />



        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="User Verification"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts2"
            android:fontFamily="@font/opensanssemibold"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_marginRight="@dimen/ts24"
            android:layout_marginLeft="@dimen/ts24"
            >



            <ImageView
                android:layout_width="@dimen/cat"
                android:layout_height="@dimen/cat"
                android:src="@drawable/ic_otp"
                android:layout_marginTop="@dimen/ts8"
                />


            <TextView
                android:layout_width="@dimen/img6"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_marginTop="@dimen/ts12"
                android:text="We have sent you SMS with 4 digit verification code (OTP) on"
                android:textSize="@dimen/sp12"
                android:textAlignment="center"
                android:fontFamily="@font/opensansregular"
                />
            <TextView
                android:id="@+id/numbertvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/ts12"
                android:textSize="@dimen/sp12"
                android:text="+91 7025549341"
                android:fontFamily="@font/opensanssemibold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ts24"

                >
                <EditText
                    android:id="@+id/et1"
                    android:layout_width="@dimen/ts48"
                    android:layout_height="@dimen/ts48"
                    android:background="@drawable/etshape"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:hint="0"
                    android:layout_marginTop="@dimen/ts4"
                    android:layout_marginBottom="@dimen/ts4"
                    android:elevation="@dimen/ts1"
                    android:inputType="number"
                    android:textSize="@dimen/sp16"
                    />
                <EditText
                    android:id="@+id/et2"
                    android:layout_width="@dimen/ts48"
                    android:layout_height="@dimen/ts48"
                    android:background="@drawable/etshape"
                    android:layout_marginLeft="@dimen/ts12"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/ts4"
                    android:layout_marginBottom="@dimen/ts4"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:hint="0"
                    android:elevation="@dimen/ts1"
                    android:textSize="@dimen/sp16"
                    />
                <EditText
                    android:id="@+id/et3"
                    android:layout_width="@dimen/ts48"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginTop="@dimen/ts4"
                    android:layout_marginBottom="@dimen/ts4"
                    android:background="@drawable/etshape"
                    android:layout_marginLeft="@dimen/ts12"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:hint="0"
                    android:elevation="@dimen/ts1"
                    android:inputType="number"
                    android:textSize="@dimen/sp16"

                    />
                <EditText
                    android:id="@+id/et4"
                    android:layout_width="@dimen/ts48"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginTop="@dimen/ts4"
                    android:layout_marginBottom="@dimen/ts4"
                    android:background="@drawable/etshape"
                    android:layout_marginLeft="@dimen/ts12"
                    android:maxLength="1"
                    android:elevation="@dimen/ts1"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:hint="0"
                    android:textSize="@dimen/sp16"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btid"
                android:layout_width="@dimen/img6"
                android:layout_height="@dimen/ts48"
                android:background="@drawable/buttonshape1"
                android:gravity="center"
                android:layout_marginTop="@dimen/ts48"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensanssemibold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resendtvid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ts40"
                android:layout_marginTop="@dimen/ts32"
                android:layout_marginBottom="@dimen/ts8"
                android:gravity="center"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp12"
                    android:text="Did'nt recieved verification OTP ? "
                    android:fontFamily="@font/opensansregular"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp14"
                    android:text=" Resend again"
                    android:fontFamily="@font/helveticanbold1"
                    />

            </LinearLayout>



        </LinearLayout>





    </LinearLayout>



</LinearLayout>