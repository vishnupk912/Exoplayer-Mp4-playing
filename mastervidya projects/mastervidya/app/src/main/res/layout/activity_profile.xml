<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Profile">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:background="@drawable/buttonshape9"
        android:layout_margin="@dimen/ts12"
        android:elevation="@dimen/ts4"
        >

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape2"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parents Profile"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="@dimen/sp16"
                android:textColor="@color/darkblack"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape9"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Settings"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="@dimen/sp16"
                android:textColor="@color/dgrey2"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:background="@color/colorprimarydark"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/ts32"
            android:layout_height="@dimen/ts32"
            android:src="@drawable/ic_leftarrow"
            android:layout_marginLeft="@dimen/ts12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bgimage2"
        >

        <FrameLayout
            android:layout_width="@dimen/img6"
            android:layout_height="@dimen/img6"
            android:layout_marginTop="@dimen/ts12"
            android:gravity="center"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_loop="true"
                app:lottie_fileName="wave.json"
                app:lottie_autoPlay="true" />

            <ImageView
                android:id="@+id/imageid"
                android:layout_width="@dimen/cat"
                android:layout_height="@dimen/cat"
                android:src="@drawable/love"
                android:layout_gravity="center"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ts20"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/grey11"
                android:fontFamily="@font/poppinssemibold"
                />

            <TextView
                android:id="@+id/nameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkblack"
                android:layout_marginTop="@dimen/ts12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_marginTop="@dimen/ts16"
                android:textColor="@color/grey11"
                android:fontFamily="@font/poppinssemibold"
                />

            <TextView
                android:id="@+id/phonetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkblack"
                android:layout_marginTop="@dimen/ts12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="@dimen/ts16"
                android:textColor="@color/grey11"
                android:fontFamily="@font/poppinssemibold"
                />

            <TextView
                android:id="@+id/addresstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkblack"
                android:layout_marginTop="@dimen/ts12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Board :"
                android:layout_marginTop="@dimen/ts16"
                android:textColor="@color/grey11"
                android:fontFamily="@font/poppinssemibold"
                />

            <TextView
                android:id="@+id/boardtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkblack"
                android:layout_marginTop="@dimen/ts12"
                android:layout_marginBottom="@dimen/ts4"
                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>