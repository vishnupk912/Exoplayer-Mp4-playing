<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage2"
    android:gravity="center_horizontal"
    android:id="@+id/lay_main"
    android:orientation="vertical"
    tools:context=".ui.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:layout_marginTop="@dimen/ts48"
        >


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorprimarydark"
            android:textSize="@dimen/sp14"
            android:text="Step 1/2"
            android:layout_marginTop="@dimen/cat1"
            android:layout_marginBottom="@dimen/ts16"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/ts12"
            android:layout_marginLeft="@dimen/ts12"
            android:fontFamily="@font/poppinssemibold"


            />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your mobile number"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            android:fontFamily="@font/poppinssemibold"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An OTP will be triggered to this mobile number for verification"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:layout_marginBottom="@dimen/ts12"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/ts12"
            android:layout_marginLeft="@dimen/ts12"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="@dimen/ts16"


            />

        <EditText
            android:id="@+id/mobilenumberet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts48"
            android:layout_marginTop="@dimen/ts32"
            android:background="@drawable/etshape"
            android:hint="Enter your mobile number"
            android:layout_marginLeft="@dimen/ts32"
            android:layout_marginRight="@dimen/ts32"
            android:paddingLeft="@dimen/ts12"
            android:elevation="@dimen/ts2"
            android:textSize="@dimen/sp16"
            android:fontFamily="@font/poppinsregular"
            android:inputType="number"
            />

        <LinearLayout
            android:id="@+id/lay_signin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ts40"
            android:background="@drawable/buttonshape1"
            android:gravity="center"
            android:layout_marginTop="@dimen/ts48"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_marginLeft="@dimen/ts20"
                android:layout_marginRight="@dimen/ts20"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:fontFamily="@font/poppinssemibold"


                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>