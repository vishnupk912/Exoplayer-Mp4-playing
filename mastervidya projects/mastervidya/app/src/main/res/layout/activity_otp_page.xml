<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lay_main"
    android:background="@drawable/bgimage2"
    tools:context=".ui.OtpPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:layout_marginTop="@dimen/ts48"
        >


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorprimarydark"
            android:textSize="@dimen/sp14"
            android:text="Step 2/2"
            android:layout_marginTop="@dimen/cat1"
            android:layout_marginBottom="@dimen/ts16"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/ts12"
            android:layout_marginLeft="@dimen/ts12"
            android:fontFamily="@font/poppinssemibold"


            />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify your mobile number"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            android:fontFamily="@font/poppinssemibold"


            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:layout_marginBottom="@dimen/ts12"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/ts12"
            android:layout_marginLeft="@dimen/ts12"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="@dimen/ts16"


            />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/dotlay"
                android:layout_width="@dimen/img1"
                android:layout_height="@dimen/ts40"
                android:layout_marginTop="@dimen/ts12"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/ts16"
                        android:layout_height="@dimen/ts16"
                        android:src="@drawable/sheetshaperound1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/ts16"
                        android:layout_height="@dimen/ts16"
                        android:src="@drawable/sheetshaperound1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/ts16"
                        android:layout_height="@dimen/ts16"
                        android:src="@drawable/sheetshaperound1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/ts16"
                        android:layout_height="@dimen/ts16"
                        android:src="@drawable/sheetshaperound1"
                        />


                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/etlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ts12"
            >
            <LinearLayout
                android:layout_width="@dimen/ts48"
                android:layout_height="@dimen/ts48"
                android:gravity="center"
                android:background="@drawable/etshape"
                android:layout_margin="@dimen/ts4"

                >

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:inputType="number"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/ts48"
                android:layout_height="@dimen/ts48"
                android:gravity="center"
                android:background="@drawable/etshape"
                android:layout_margin="@dimen/ts4"

                >

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:inputType="number"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/ts48"
                android:layout_height="@dimen/ts48"
                android:gravity="center"
                android:background="@drawable/etshape"
                android:layout_margin="@dimen/ts4"


                >
                <EditText
                    android:id="@+id/et3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:inputType="number"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/ts48"
                android:layout_height="@dimen/ts48"
                android:gravity="center"
                android:background="@drawable/etshape"
                android:layout_margin="@dimen/ts4"
                >

                <EditText
                    android:id="@+id/et4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_otp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ts40"
            android:background="@drawable/buttonshape1"
            android:gravity="center"
            android:layout_marginTop="@dimen/ts48"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_marginLeft="@dimen/ts20"
                android:layout_marginRight="@dimen/ts20"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:fontFamily="@font/poppinssemibold"


                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>