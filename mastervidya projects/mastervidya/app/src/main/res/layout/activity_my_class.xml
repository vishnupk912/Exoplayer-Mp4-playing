<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage2"
    android:orientation="vertical"
    tools:context=".ui.MyClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:background="@color/colorprimarydark"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/ts32"
            android:layout_height="@dimen/ts32"
            android:src="@drawable/ic_leftarrow"
            android:layout_marginLeft="@dimen/ts12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Class"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"
            />



    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/noclasslay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="@dimen/img6"
            android:layout_height="@dimen/img6"
            android:src="@drawable/empty"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="@dimen/img6"
            android:layout_height="wrap_content"
            android:text="No Courses are Available"
            android:fontFamily="@font/poppinsregular"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/ts16"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/classlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:listitem="@layout/subclasslay"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical"
        android:background="@color/lgrey"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/ts12"

            >


            <ImageView
                android:layout_width="@dimen/ts48"
                android:layout_height="@dimen/ts48"
                android:src="@drawable/logowide"
                android:layout_marginLeft="@dimen/ts16"
                android:padding="@dimen/ts4"
                android:background="@drawable/buttonshape2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/ts2"
                android:layout_marginTop="@dimen/ts4"
                android:layout_marginLeft="@dimen/ts12"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscribe Now"
                    android:textColor="@color/colorprimarydark"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="@dimen/sp16"
                    android:layout_marginRight="@dimen/ts8"
                    android:layout_marginLeft="@dimen/ts2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here to Subscribe the Course"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/sp12"
                    android:layout_marginRight="@dimen/ts8"
                    android:layout_marginLeft="@dimen/ts2"
                    android:layout_marginBottom="@dimen/ts4"
                    android:layout_marginTop="-4dp"
                    />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/ts48"
                android:layout_height="@dimen/ts48"
                android:src="@drawable/ic_arrow"
                android:layout_marginLeft="@dimen/ts16"
                android:padding="@dimen/ts4"
                android:layout_marginRight="@dimen/ts12"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>