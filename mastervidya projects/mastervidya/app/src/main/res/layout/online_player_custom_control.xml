<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:background="#27000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_bwd"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/ts40"
                android:layout_height="@dimen/ts40"
                android:layout_marginTop="@dimen/ts4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/cat1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_replay_10_white_24dp" />


            <ImageView
                android:id="@+id/exo_play"
                android:layout_width="@dimen/ts40"
                android:layout_height="@dimen/ts40"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@android:drawable/ic_media_play" />
            <!--android:background="@drawable/player_play_button_background"-->

            <ImageView
                android:id="@+id/exo_pause"
                android:layout_width="@dimen/ts40"
                android:layout_height="@dimen/ts40"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@android:drawable/ic_media_pause" />


            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img_fwd"
                android:layout_marginRight="@dimen/cat1"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/ts40"
                android:layout_height="@dimen/ts40"
                android:layout_marginTop="@dimen/ts4"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_forward_10_white_24dp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_media_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="#58000000"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_player_current_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ts4"
                    android:text="00:00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />


                <com.google.android.exoplayer2.ui.DefaultTimeBar
                    android:id="@+id/exo_progress"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    app:buffered_color="@color/grey11"
                    app:played_color="@color/colorprimary"
                    app:scrubber_color="@color/colorprimarydark"
                    app:unplayed_color="@android:color/white" />


                <TextView
                    android:id="@+id/tv_player_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:paddingRight="@dimen/ts4"
                    android:text="00:00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_marginRight="@dimen/ts4"

                    android:padding="@dimen/ts4"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_play_back_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/ts12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_play_back_speed_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" X"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/img_setting"

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ts40"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginRight="@dimen/ts2"
                    android:padding="@dimen/ts4"
                    android:src="@drawable/ic_settings_white_24dp" />

                <ImageView
                    android:id="@+id/img_full_screen_enter_exit"
                    android:src="@drawable/exo_controls_fullscreen_enter"
                    android:layout_width="@dimen/ts40"
                    android:layout_height="@dimen/ts40" />




            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




    <ImageView
        android:id="@+id/img_back_player"
        android:layout_margin="@dimen/ts12"
        app:srcCompat="@drawable/ic_back"
        android:layout_width="@dimen/ts40"
        android:layout_height="@dimen/ts40" />



</FrameLayout>