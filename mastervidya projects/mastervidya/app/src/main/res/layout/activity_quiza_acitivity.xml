<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimage2"
    tools:context=".ui.QuizaAcitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/ts32"
            android:layout_height="@dimen/ts32"
            android:src="@drawable/ic_leftarrow1"
            android:layout_marginLeft="@dimen/ts12"
            />
        <TextView
            android:id="@+id/subnametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Super Quiz"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorprimarydark"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"
            />



    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdownText"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp16"
        android:text="timer"
        android:layout_marginTop="@dimen/ts20"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/colorprimarydark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ts48"
        >
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            />
    </LinearLayout>
</LinearLayout>
