<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/lay_main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:background="@color/lgrey"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/ts32"
            android:layout_height="@dimen/ts32"
            android:src="@drawable/ic_leftarrow1"
            android:layout_marginLeft="@dimen/ts12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade Payment"
            android:textColor="@color/darkblack"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lgrey"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/ts14"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enrolled Months"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="@dimen/sp16"
                            android:layout_marginTop="@dimen/ts12"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:layout_marginTop="@dimen/ts12"
                            android:layout_marginBottom="@dimen/ts12"
                            />

                    </LinearLayout>



                    <EditText
                        android:id="@+id/etchild"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ts48"
                        android:background="@drawable/etshape"
                        android:layout_margin="@dimen/ts16"
                        android:hint="Enter your Child Name"
                        android:textSize="@dimen/sp16"
                        android:singleLine="true"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:paddingLeft="@dimen/ts12"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Your plan"
                        android:textSize="@dimen/sp14"
                        android:layout_marginLeft="@dimen/ts16"
                        android:layout_marginTop="@dimen/ts12"
                        android:textColor="@color/darkblack"
                        android:fontFamily="@font/poppinssemibold"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cat1"
                        android:layout_marginRight="@dimen/ts16"
                        android:layout_marginLeft="@dimen/ts16"
                        android:layout_marginTop="@dimen/ts12"
                        android:layout_marginBottom="@dimen/ts12"
                        >
                        <LinearLayout
                            android:id="@+id/yearlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/ts4"
                            android:background="@drawable/etshape"
                            android:gravity="center"
                            android:orientation="vertical"

                            >
                            <TextView
                                android:id="@+id/tv11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="One Year Plan"
                                android:textColor="@color/colorprimarydark"
                                android:textSize="@dimen/sp16"
                                android:fontFamily="@font/poppinsregular"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:id="@+id/tv12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp12"
                                    android:fontFamily="@font/poppinssemibold"
                                    />
                                <TextView
                                    android:id="@+id/tv13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dgrey2"
                                    android:textSize="@dimen/sp12"
                                    android:layout_marginLeft="@dimen/ts12"
                                    android:fontFamily="@font/poppinsregular"
                                    />
                            </LinearLayout>




                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/monthlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/ts4"
                            android:background="@drawable/etshape"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tv21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly Plan"
                                android:textColor="@color/colorprimarydark"
                                android:textSize="@dimen/sp16"
                                android:fontFamily="@font/poppinsregular"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:id="@+id/tv22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp12"
                                    android:fontFamily="@font/poppinssemibold"
                                    />

                                <TextView
                                    android:id="@+id/tv23"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dgrey2"
                                    android:textSize="@dimen/sp12"
                                    android:layout_marginLeft="@dimen/ts12"
                                    android:fontFamily="@font/poppinsregular"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Mode"
                        android:textSize="@dimen/sp14"
                        android:layout_marginLeft="@dimen/ts16"
                        android:layout_marginTop="@dimen/ts12"
                        android:textColor="@color/darkblack"
                        android:fontFamily="@font/poppinssemibold"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cat1"
                        android:layout_marginRight="@dimen/ts16"
                        android:layout_marginLeft="@dimen/ts16"
                        android:layout_marginTop="@dimen/ts12"
                        android:layout_marginBottom="@dimen/ts12"
                        >
                        <LinearLayout
                            android:id="@+id/agentlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/ts4"
                            android:background="@drawable/etshape"
                            android:gravity="center"
                            android:orientation="vertical"

                            >
                            <TextView
                                android:id="@+id/tv31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agent Mode"
                                android:textColor="@color/colorprimarydark"
                                android:textSize="@dimen/sp16"
                                android:fontFamily="@font/poppinsregular"
                                />




                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/onlinelay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/ts4"
                            android:background="@drawable/etshape"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tv32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Online Mode"
                                android:textColor="@color/colorprimarydark"
                                android:textSize="@dimen/sp16"
                                android:fontFamily="@font/poppinsregular"
                                />


                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class Details"
                        android:textSize="@dimen/sp14"
                        android:layout_marginLeft="@dimen/ts16"
                        android:layout_marginTop="@dimen/ts12"
                        android:textColor="@color/darkblack"
                        android:fontFamily="@font/poppinssemibold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ts32"
                        android:layout_marginRight="@dimen/ts12"
                        android:layout_marginLeft="@dimen/ts12"
                        android:layout_marginTop="@dimen/ts12"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Board"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/ts12"
                            android:fontFamily="@font/poppinsregular"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            >
                            <TextView
                                android:id="@+id/boardtv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp14"
                                android:layout_marginRight="@dimen/ts12"
                                android:textColor="@color/colorprimarydark"
                                android:fontFamily="@font/poppinsregular"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ts2"
                        android:background="@color/lgrey"
                        android:layout_marginLeft="@dimen/ts12"
                        android:layout_marginRight="@dimen/ts12"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ts32"
                        android:layout_marginRight="@dimen/ts12"
                        android:layout_marginLeft="@dimen/ts12"
                        android:gravity="center_vertical"
                        android:background="@color/white"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class"
                            android:textSize="@dimen/sp14"
                            android:layout_marginLeft="@dimen/ts12"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"

                            >
                            <TextView
                                android:id="@+id/classtv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp14"
                                android:layout_marginRight="@dimen/ts12"
                                android:textColor="@color/colorprimarydark"
                                android:fontFamily="@font/poppinsregular"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ts2"
                        android:background="@color/lgrey"
                        android:layout_marginLeft="@dimen/ts12"
                        android:layout_marginRight="@dimen/ts12"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subjects"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/darkblack"
                        android:layout_marginLeft="@dimen/ts16"
                        android:layout_marginTop="@dimen/ts12"
                        android:fontFamily="@font/poppinssemibold"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        tools:listitem="@layout/laysub"
                        tools:itemCount="6"
                        android:layout_marginTop="@dimen/ts12"
                        android:layout_margin="@dimen/ts12"
                        android:background="@color/white"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ts8"
                        android:background="@color/lgrey"
                        android:layout_marginRight="@dimen/ts12"
                        android:layout_marginLeft="@dimen/ts12"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What we provide for this Course?  "
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/darkblack"
                        android:layout_marginLeft="@dimen/ts16"
                        android:layout_marginTop="@dimen/ts12"
                        android:fontFamily="@font/poppinsmedium"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/ts20"
                        android:layout_marginLeft="@dimen/ts12"
                        android:layout_marginTop="@dimen/ts12"
                        android:layout_marginRight="@dimen/ts12"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. We provide Full access of this course"
                            android:textSize="@dimen/sp14"
                            android:layout_marginLeft="@dimen/ts12"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/ts12"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. We provide Quiz based on every chapters"
                            android:textSize="@dimen/sp14"
                            android:layout_marginLeft="@dimen/ts12"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/ts12"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. Alerts through whatsapp whenever the the exam is conducted to parents."
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/ts12"
                            android:layout_marginLeft="@dimen/ts12"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4. We provide you Special Study Package Absolutely free with this course."
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/ts12"
                            android:layout_marginLeft="@dimen/ts12"
                            android:fontFamily="@font/poppinsregular"
                            />


                    </LinearLayout>


                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@color/colorprimarydark"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount : "
                    android:textSize="@dimen/sp16"
                    android:layout_marginLeft="@dimen/ts12"
                    android:layout_marginTop="@dimen/ts8"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppinsregular"
                    />
                <TextView
                    android:id="@+id/totalamounttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp16"
                    android:text="Rs 0"
                    android:layout_marginLeft="@dimen/ts12"
                    android:layout_marginBottom="@dimen/ts4"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppinsregular"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                >

                <TextView
                    android:id="@+id/checkoutlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkout"
                    android:textSize="@dimen/sp16"
                    android:background="@drawable/buttonshape2"
                    android:layout_marginRight="@dimen/ts12"
                    android:textColor="@color/colorprimarydark"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingLeft="@dimen/ts8"
                    android:paddingRight="@dimen/ts8"
                    android:paddingTop="@dimen/ts4"
                    android:paddingBottom="@dimen/ts4"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>