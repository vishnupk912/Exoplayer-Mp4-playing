<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/img1"
    android:layout_margin="@dimen/ts12"
    android:layout_height="@dimen/img">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img"
        app:riv_corner_radius="@dimen/ts12"
        android:src="@drawable/slider2"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:id="@+id/playnowlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/ts12"
        android:background="@drawable/buttonshape4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Now"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="@dimen/sp12"
            android:layout_marginLeft="@dimen/ts12"
            android:layout_marginRight="@dimen/ts12"
            android:padding="@dimen/ts2"
            />

    </LinearLayout>


</FrameLayout>