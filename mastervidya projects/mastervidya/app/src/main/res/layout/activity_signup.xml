<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lay_main"
    android:background="@drawable/bgimage2"
    tools:context=".ui.Signup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >



                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Registration"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20"
                    android:layout_marginTop="@dimen/cat1"
                    android:fontFamily="@font/poppinssemibold"


                    />


                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="@dimen/cat1"
                    android:layout_height="@dimen/cat1"
                    android:src="@drawable/ic_profile"
                    android:layout_marginTop="@dimen/ts12"
                    />


                <EditText
                    android:id="@+id/nameet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginTop="@dimen/ts32"
                    android:background="@drawable/etshape"
                    android:hint="Parent Name"
                    android:layout_marginLeft="@dimen/ts32"
                    android:layout_marginRight="@dimen/ts32"
                    android:paddingLeft="@dimen/ts12"
                    android:elevation="@dimen/ts2"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="text"
                    android:textAllCaps="true"
                    />

                <EditText
                    android:id="@+id/etmobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginTop="@dimen/ts16"
                    android:background="@drawable/etshape"
                    android:hint="Mobile number"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/ts32"
                    android:layout_marginRight="@dimen/ts32"
                    android:paddingLeft="@dimen/ts12"
                    android:elevation="@dimen/ts2"
                    android:textSize="@dimen/sp16"
                    android:textAllCaps="true"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/etaddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginTop="@dimen/ts16"
                    android:background="@drawable/etshape"
                    android:hint="Enter your address "
                    android:layout_marginLeft="@dimen/ts32"
                    android:layout_marginRight="@dimen/ts32"
                    android:paddingLeft="@dimen/ts12"
                    android:elevation="@dimen/ts2"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="text"
                    android:textAllCaps="true"

                    />


                <EditText
                    android:id="@+id/etpin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginTop="@dimen/ts16"
                    android:background="@drawable/etshape"
                    android:hint="Enter your pincode"
                    android:layout_marginLeft="@dimen/ts32"
                    android:layout_marginRight="@dimen/ts32"
                    android:paddingLeft="@dimen/ts12"
                    android:elevation="@dimen/ts2"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="number"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginLeft="@dimen/ts32"
                    android:layout_marginRight="@dimen/ts32"
                    android:layout_marginTop="@dimen/ts16"
                    android:background="@drawable/etshape"
                    android:elevation="@dimen/ts2"
                    >
                    <Spinner
                        android:id="@+id/sp_bd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/array2"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginLeft="@dimen/ts32"
                    android:layout_marginRight="@dimen/ts32"
                    android:layout_marginTop="@dimen/ts16"
                    android:background="@drawable/etshape"
                    android:elevation="@dimen/ts2"
                    >
                    <Spinner
                        android:id="@+id/sp_agent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/array1"
                        />

                </LinearLayout>


                <EditText
                    android:visibility="gone"
                    android:id="@+id/etagent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts48"
                    android:layout_marginTop="@dimen/ts16"
                    android:background="@drawable/etshape"
                    android:hint="Enter Agent ID"
                    android:layout_marginLeft="@dimen/ts32"
                    android:layout_marginRight="@dimen/ts32"
                    android:paddingLeft="@dimen/ts12"
                    android:elevation="@dimen/ts2"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="text"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    android:text="Profile Picture"
                    android:layout_marginTop="@dimen/ts20"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/ts12"
                    android:fontFamily="@font/poppinsregular"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkblack"
                    android:textSize="@dimen/sp14"
                    android:text="You can select a photo from one of this emoji to set as your profile picture. "
                    android:layout_marginTop="@dimen/ts16"
                    android:textAlignment="center"
                    android:layout_margin="@dimen/ts16"
                    android:padding="@dimen/ts4"
                    android:fontFamily="@font/poppinsmedium"
                    />



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_signin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts48"
        android:background="@drawable/buttonshape1"
        android:gravity="center"
        android:layout_margin="@dimen/ts16"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register with  MasterVidya"
            android:layout_marginLeft="@dimen/ts20"
            android:layout_marginRight="@dimen/ts20"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:fontFamily="@font/poppinssemibold"


            />

    </LinearLayout>

</LinearLayout>