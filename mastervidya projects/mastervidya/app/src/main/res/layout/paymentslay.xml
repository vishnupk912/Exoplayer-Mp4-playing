<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/ts12"
    android:elevation="@dimen/ts4"
    android:background="@drawable/etshape"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vishnu PK"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"
            android:layout_marginTop="@dimen/ts12"
            />

        <TextView
            android:id="@+id/classtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard 1"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"

            />
        <TextView
            android:id="@+id/boardtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CBSE"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"

            />

        <TextView
            android:id="@+id/datetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"

            />


        <TextView
            android:id="@+id/paymentstatustv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Payment"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"

            />

        <TextView
            android:id="@+id/subscriptionstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yearly Subscription"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"

            />

        <TextView
            android:id="@+id/amounttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 1000"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/ts12"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_margin="@dimen/ts12"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapegradient"
        android:layout_gravity="right"
        android:layout_margin="@dimen/ts12"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="@dimen/sp12"
            android:paddingLeft="@dimen/ts12"
            android:paddingRight="@dimen/ts12"
            android:paddingTop="@dimen/ts4"
            android:paddingBottom="@dimen/ts4"
            />

    </LinearLayout>
</FrameLayout>