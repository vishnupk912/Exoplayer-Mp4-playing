<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/img6"
        android:layout_height="@dimen/img6"
        android:layout_gravity="center"
        android:src="@drawable/logowide"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/cat1"

        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We teach through our online Platform"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginBottom="@dimen/ts4"

            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We the team teach your students through online with very low price. "
            android:textColor="@color/black"
            android:textSize="@dimen/sp12"
            android:textAlignment="center"
            android:padding="@dimen/ts8"
            android:fontFamily="@font/poppinslight"
            />

    </LinearLayout>

</FrameLayout>