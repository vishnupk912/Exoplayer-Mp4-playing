<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_container"
    android:padding="@dimen/ts2"
    android:layout_margin="@dimen/ts12"
    android:background="@drawable/buttonshape2light"
    android:elevation="@dimen/ts12"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cat"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/ll_image_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/cat"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/ts12"

                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_download_banner"
                    android:layout_width="@dimen/cat1"
                    android:layout_height="@dimen/cat1"
                    app:riv_corner_radius="@dimen/ts48"
                    android:padding="@dimen/ts8"
                    android:src="@drawable/ic_savedvideos"
                    />

                <ProgressBar
                    android:layout_marginTop="@dimen/ts12"
                    android:id="@+id/progress_horizontal_percentage"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts4"
                    android:indeterminate="false"
                    android:maxHeight="10dip"
                    android:minHeight="10dip"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_exo_downloaded" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >
            <LinearLayout
                android:textSize="@dimen/ts14"
                android:fontFamily="@font/poppinsregular"
                android:padding="@dimen/ts2"
                android:layout_toLeftOf="@+id/img_overflow"
                android:layout_toRightOf="@+id/ll_image_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/tv_download_vid_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Resignation"
                    android:maxLines="3"
                    android:textColor="@color/colorprimarydark"
                    android:textSize="@dimen/ts16"
                    android:fontFamily="@font/poppinsregular"
                    />
                <TextView
                    android:id="@+id/yeartv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Science | Chapter  1"
                    android:textColor="@color/red"
                    android:textSize="@dimen/ts8" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/ts14"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/tv_downloaded_percentage"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="50/100 MB - 50%"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="@dimen/ts14"
                    android:fontFamily="@font/poppinsregular"

                    android:id="@+id/tv_downloaded_status"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Download Status Paused"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_overflow"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_menu_overflow"
                android:layout_width="@dimen/ts24"
                android:layout_margin="@dimen/ts12"
                android:layout_height="@dimen/ts24"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>


    </LinearLayout>





</LinearLayout>