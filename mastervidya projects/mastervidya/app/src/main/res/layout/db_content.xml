<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgimage2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/img"
            android:orientation="horizontal"
            android:background="@drawable/abstractshape2"

            >
            <LinearLayout
                android:id="@+id/laytool"
                android:layout_width="@dimen/ts40"
                android:layout_height="@dimen/ts40"
                android:background="@drawable/buttonshape2"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/ts16"
                android:gravity="center"
                android:elevation="@dimen/ts4"
                >
                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:src="@drawable/ic_menu"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/ts24"
                android:layout_height="@dimen/ts24"
                android:background="@drawable/buttonshape3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-32dp"
                android:layout_marginTop="@dimen/ts20"
                android:gravity="center"
                android:elevation="@dimen/ts4"
                >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="@dimen/ts20"
                    android:layout_height="@dimen/ts20"
                    android:src="@drawable/love"
                    android:padding="1.8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Vishnu P K"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/wishtv"
                    android:layout_width="@dimen/img1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/sp16"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <ImageView
                    android:layout_width="@dimen/ts48"
                    android:layout_height="@dimen/ts48"
                    android:src="@drawable/circlelogo"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/ts20"
                    />
            </LinearLayout>


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ts12"
                    >

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img1"
                        />


                </FrameLayout>

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="@color/colorprimarydark"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="8dp"
                    app:dotsSpacing="2dp"
                    app:dotsWidthFactor="2.5"
                    android:layout_marginBottom="@dimen/ts12"
                    android:layout_gravity="bottom|center_horizontal"
                    app:selectedDotColor="@color/colorprimarydark"
                    app:progressMode="true"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ts12"
                    android:layout_marginLeft="@dimen/ts12"
                    android:gravity="center"
                    >
                    <FrameLayout
                        android:id="@+id/lay1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img"
                        android:layout_weight="1"
                        android:background="@drawable/buttonshape2"
                        android:layout_margin="@dimen/ts8"
                        android:elevation="@dimen/ts4"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="@dimen/cat1"
                                android:layout_height="@dimen/cat1"
                                android:src="@drawable/ic_myclass"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Class"
                                android:fontFamily="@font/poppinsmedium"
                                android:textColor="@color/colorprimarydark"
                                android:padding="@dimen/ts8"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/ts32"
                            android:layout_height="@dimen/ts32"
                            android:src="@drawable/ic_playbutton"
                            android:layout_gravity="right"
                            android:layout_margin="@dimen/ts8"
                            />


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/lay2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img"
                        android:layout_weight="1"
                        android:background="@drawable/buttonshape2"
                        android:layout_margin="@dimen/ts8"
                        android:elevation="@dimen/ts4"

                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="@dimen/cat1"
                                android:layout_height="@dimen/cat1"
                                android:src="@drawable/ic_specialstudy"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Special Study"
                                android:fontFamily="@font/poppinsmedium"
                                android:textColor="@color/colorprimarydark"
                                android:padding="@dimen/ts8"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/ts32"
                            android:layout_height="@dimen/ts32"
                            android:src="@drawable/ic_playbutton"
                            android:layout_gravity="right"
                            android:layout_margin="@dimen/ts8"
                            />

                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ts12"
                    android:layout_marginLeft="@dimen/ts12"
                    android:gravity="center"
                    >
                    <FrameLayout
                        android:id="@+id/lay3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/ts8"
                        android:background="@drawable/buttonshape2"
                        android:elevation="@dimen/ts4"

                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="@dimen/cat1"
                                android:layout_height="@dimen/cat1"
                                android:src="@drawable/ic_report"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Report"
                                android:fontFamily="@font/poppinsmedium"
                                android:textColor="@color/colorprimarydark"
                                android:padding="@dimen/ts8"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/ts32"
                            android:layout_height="@dimen/ts32"
                            android:src="@drawable/ic_playbutton"
                            android:layout_gravity="right"
                            android:layout_margin="@dimen/ts8"
                            />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/lay4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/ts8"
                        android:background="@drawable/buttonshape2"
                        android:elevation="@dimen/ts4"

                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="@dimen/cat1"
                                android:layout_height="@dimen/cat1"
                                android:src="@drawable/ic_payment"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payments"
                                android:fontFamily="@font/poppinsmedium"
                                android:textColor="@color/colorprimarydark"
                                android:padding="@dimen/ts8"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/ts32"
                            android:layout_height="@dimen/ts32"
                            android:src="@drawable/ic_playbutton"
                            android:layout_gravity="right"
                            android:layout_margin="@dimen/ts8"
                            />

                    </FrameLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ts12"
                    android:layout_marginRight="@dimen/ts12"
                    android:layout_marginTop="@dimen/ts16"
                    android:layout_marginBottom="@dimen/ts12"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Class"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/colorprimarydark"
                        android:padding="@dimen/ts4"
                        android:textSize="@dimen/sp16"
                        android:layout_marginLeft="@dimen/ts8"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:layout_marginTop="@dimen/ts4"
                        />

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




</LinearLayout>